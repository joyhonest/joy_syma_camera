<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/Grid_imageView1"
            android:scaleType="centerCrop"
            android:src="@mipmap/video_bg_jh" />

        <ImageView
            android:id="@+id/video_bg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/video_bg_jh"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/select_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@mipmap/download_icon_jh"
            android:layout_alignRight="@+id/Grid_imageView1"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Grid_textView1"
        android:visibility="gone"
        android:layout_gravity="center" />

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:id="@+id/Grid_progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progressDrawable="@drawable/joyh_progressbar"
        android:layout_gravity="center" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />
</LinearLayout>